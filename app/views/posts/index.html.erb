<div>
	<% @posts.each do |post| %>
		<div class="post-block">
			<div class="start-end-space"> </div>
			<div class="post-title">
					<h3><%= link_to post.title, post_comments_path(post) %></h3>
				<p><%= post.body %></p>
			</div>

			<div class="post-comments center">
				<p><%= post.comments_number %> comments</p>
			</div>

			<div class="post-infos center">
				<% if post.can_delete?(current_user) %>
					<p>Posted by <%= post.post_author %> <br>on <%= post.posted_date_time %><%= button_to "Delete", post_path(post), data: { confirm: "Are you sure?" }, method: :delete %></p>
				<% else %>
					<p>Posted by <%= post.post_author %> <br>on <%= post.posted_date_time %></p>
				<% end %>
			</div>
			<div class="start-end-space"> </div>
		</div>
	<% end %>
</div>